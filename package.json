{
  "name": "Namos_App",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "qr": "react-native start --qr",
    "generate-icons": "node generate-icons.js",
    "build:android": "cd android && ./gradlew assembleRelease && cd ..",
    "build:android:release": "cd android && ./gradlew assembleRelease && cd ..",
    "build:offline": "powershell -ExecutionPolicy Bypass -File ./build-offline.ps1",
    "build:offline:release": "powershell -ExecutionPolicy Bypass -File ./build-offline.ps1 release",
    "setup-usb": "node -e \"const {execSync} = require('child_process'); try { execSync('adb reverse tcp:8081 tcp:8081', {stdio: 'inherit'}); console.log('✅ USB debugging setup complete!'); } catch(e) { console.error('❌ Failed to setup USB debugging. Make sure your device is connected and ADB is in PATH.'); }\"",
    "android:usb": "npm run setup-usb && react-native run-android"
  },
